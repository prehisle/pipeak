# Flask 环境配置
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# 安全密钥 (生产环境请使用随机生成的密钥)
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# MongoDB 配置
MONGODB_URI=mongodb://user:password@192.168.1.4:27017/latex_trainer_dev?authSource=admin
MONGODB_DB=latex_trainer_dev

# CORS 配置
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# 管理后台配置
ADMIN_PASSWORD=admin123

# Google OAuth 配置
# 在 https://console.cloud.google.com/ 创建OAuth 2.0客户端ID
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth 配置
# 在 https://github.com/settings/developers 创建OAuth App
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth 回调URL
OAUTH_REDIRECT_URI=http://localhost:5173/auth/callback

# Token 加密密钥 (使用 python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())" 生成)
TOKEN_ENCRYPTION_KEY=your-encryption-key-here
